<div class="col-lg-12 text-center">
  
</div>


<div id="NewsDiv"  ng-controller="NewsController as vm">
    
    <button ng-click="vm.getNews()">Get News courtesy of CBR</button>
    <div id="NewsResults" class="panel-heading">
        <div class="panel panel-primary cbrPanel" ng-repeat="shop in vm.news">


            <a href="{{shop.Link}}" target="_blank">
                <div class="newsItem row">
                    <img class="cbrImage col-sm-2" src="{{shop.Image}}" />
                    <h3 class="visible hidden-xs cbrDescription col-sm-10">{{shop.Description}}</h3>
                    <p class="visible hidden-xs">{{shop.PublishedDate.Substring(0, 16)}}</p>
                    

                </div>
            </a>

        </div>
        <button id="ToggleNews" onclick="HideNews()">Click to hide</button>
    </div>
    

  
   
</div>

<script type="text/javascript">
    function CallNews() {
        
        angular.element(document.getElementById('NewsController')).scope().newsVm.getNews();
    }

    function HideNews() {
        $("#NewsResults").toggle();
        $("#ToggleNews").text("Click to show using ang");

        document.getElementById("news").scrollIntoView();

    }
</script>


