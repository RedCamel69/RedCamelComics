@model IEnumerable < string > 

<div class="btn-group btn-group-sm btn-group-justified horizontalMenuParentBtnGrp">  

   @* @Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btndefault btn-sm" })    *@
    
    @foreach(var link in Model) { 
        @Html.RouteLink(link, new { controller = "Product", action = "List", category = link, page = 1 }, 
       new { @class = "btn btn-default btn-sm" + (link == ViewBag.SelectedCategory.ToString() ? " btn-danger" : "") })    
    } 

    
</div> 
